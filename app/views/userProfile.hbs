<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
        <h2>My Reservations</h2>
        <table class="table table-striped">
        
        
            <thead>
            <tr>
                <th>Reservation ID</th>
                <th>Check-in Date</th>
                <th>Check-out Date</th>
            </tr>
            </thead>
            <tbody>

            {{#each bookings}}
            <tr>
                <td>{{this.reservationID}}</td>
                <td>{{this.check_in_date}}</td>
                <td>{{this.check_out_date}}</td>
            </tr>
        {{/each}}
            <!-- Add more reservation rows here -->
            </tbody>
        </table>
        </div>

        <div class="col-md-4">
        <h2>User Information</h2>
        <div class="card">
            <div class="card-body">
            <h5 class="card-title">{{username}}</h5>
            <p class="card-text">Email: {{email}}</p>
            <p class="card-text">Phone: {{phone_number}}</p>
            </div>
        </div>
        </div>
    </div>
</div>

  