<div class="container-fluid">
  <div class="row">
    <div class="col-md-3 col-sm-12 sidebar">
      <ul>
        <li><a href="/adminShowUsers">Users</a></li>
        <li><a href="/adminShowBookings">Bookings</a></li>
        <li><a href="/adminShowRooms">Rooms</a></li>
      </ul>
    </div>

    <div class="col-md-9 col-sm-12">
      {{#if message}}
      <div class="row mt-5">
        <div class="col-12">
          <div class="alert alert-primary" role="alert">
            {{message}}
          </div>
        </div>
      </div>
      {{/if}}
      <div>
        <h3>Rooms: {{rooms.length}}</h3>
      </div>

      {{#if rooms}}
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Room ID</th>
              <th>Room's Number</th>
              <th>Capacity</th>
            </tr>
          </thead>
          <tbody>
            {{#each rooms}}
            {{!-- mono gia ta available rooms!! --}}
            <tr>
              <td>{{this.roomID}}</td>
              <td>{{this.number}}</td>
              <td>{{this.RoomTypeRoomTypeID}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      {{/if}}

      {{#unless rooms}}
      <div class="row mt-5">
        <div class="col">No Rooms Found!</div>
      </div>
      {{/unless}}

    </div>
  </div>
</div>
