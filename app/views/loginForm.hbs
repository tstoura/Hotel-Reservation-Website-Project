<form action="/dologin" method="post">

    {{#if message}}
    <div class="row mt-5">
        <div class="col-6 offset-3">
            <div class="alert alert-primary" role="alert">
                {{message}}
            </div>
        </div>
    </div>
    {{/if}}
    
    <div class="row mt-5">
        <div class="col-8 offset-2">
            <h2 class="text-center">Enter your username and password</h2>
        </div>
    </div>
    <div class="row mt-1">
        <div class="col-6 offset-3">
            <div class="form-floating">
                <label class="form-label" for="username">Username</label>
                <input type="text" class="form-control"
                    value="{{username}}" name="username" id="username" placeholder="Username"
                    required="required" autofocus> 
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-6 offset-3">
            <div class="form-floating">
                <label class="form-label" for="password">Password</label>
                <input type="password" class="form-control"
                    value="{{password}}" name="password" id="password" placeholder="Password"
                    required="required">                
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-6 offset-3">
            <button type="submit" class="btn btn-secondary login-btn btn-block w-100">Login</button>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-6 offset-3 text-center">
            Not a member yet?
            <a href="/register">Create  an account!</a>
        </div>
    </div>

</form>
